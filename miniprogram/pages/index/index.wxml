<view class="container">
	<view class="widthfull">
		<image class="full-image" src="../../assets/images/banner.jpg" mode="widthFix"></image>
	</view>

	<view class="widthfull">
		<view class="card-list">
			<view class="card-item" bindtap="bindEasyPick">帮你选</view>
		</view>
	</view>

	<view class="widthfull">
		<CityPicker />
		<van-cell-group inset>
			<van-cell title="单元格" value="内容" />
			<van-cell title="单元格" value="内容" label="描述信息" />
		</van-cell-group>
		<van-button type="primary" block>Vant 按钮</van-button>
	</view>

	<view class="widthfull">
		<van-tree-select items="{{ items }}" main-active-index="{{ mainActiveIndex }}" active-id="{{ activeId }}" bind:click-nav="onClickNav" bind:click-item="onClickItem" />
	</view>
</view>