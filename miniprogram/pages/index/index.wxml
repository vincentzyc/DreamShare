<view class="container">

  <!-- 用户 openid -->
  <view class="userinfo">
    <block wx:if="{{canIUseOpenData}}" class="userinfo-opendata">
      <view class="userinfo-block-avatar" bindtap="bindViewTap">
        <open-data type="userAvatarUrl"></open-data>
      </view>
      <view class="userinfo-nickname-wrapper">
        <open-data type="userNickName"></open-data>
      </view>
    </block>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-block-avatar" src="{{avatarUrl}}" mode="cover"></image>
      <view wx:if="{{userInfo.nickName}}" class="userinfo-nickname-wrapper">
        <text>{{userInfo.nickName}}</text>
      </view>
      <view wx:else class="userinfo-login" bindtap="getUserProfile">
        <text>点击登录</text>
      </view>
    </block>
  </view>

