  </view>

  <view class="uploader" wx:if="{{userType===0}}">
    <text class="uploader-text" bindtap="gotxdocssr">DS收入表</text>
  </view>

  <view class="tunnel">
    <image class="tunnel-image" src="../../images/sansui.jpg" mode="widthFix"></image>
  </view>

  <view class="tunnel">
    <text>联系方式</text>
    <image bindtap="addwx" class="tunnel-image" src="../../images/wechat.png" mode="widthFix"></image>
  </view>

